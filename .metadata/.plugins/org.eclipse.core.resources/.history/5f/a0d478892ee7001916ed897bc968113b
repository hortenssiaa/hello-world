		//3-2
		Scanner sc = new Scanner(System.in);
		
		System.out.print("알파벳 한 문자를 입력하시오>>");
		char alp = sc.next().charAt(0);
		
		for(int i=(alp-'a'); i>=0; i--){
			for(int j=i; j>=0; j--) {
				System.out.print(alp);
				alp++;
			} 
			System.out.println();
		}
		
	}

}
