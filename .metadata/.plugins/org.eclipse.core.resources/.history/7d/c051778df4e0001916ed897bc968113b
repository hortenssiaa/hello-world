		//ex3-2
		Scanner sc = new Scanner(System.in);
		int sum = 0;
		int count =0;
		int i=0;
		while((i= sc.nextInt())!=0){
			sum += sc.nextInt();
			count++;
		}
		sc.close();
		System.out.println(count+"개 입력한 수의 평균은 "+(double)sum/count);
	}
