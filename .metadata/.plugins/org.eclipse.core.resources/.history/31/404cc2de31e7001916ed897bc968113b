		//3-3
		Scanner sc = new Scanner(System.in);
		System.out.println("0보다 큰 정수 입력:");
		int count=0;
		int num=sc.nextInt();
		String num2 = Integer.toBinaryString(num);
		
		for(int i=0; i<num2.length(); i++){
			if(num2.indexOf(i) == 1)
				count++;
			System.out.println(count+"번");
		}
		
		
		
		
	}

